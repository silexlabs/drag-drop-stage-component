{
  "name": "stage",
  "version": "0.0.0",
  "description": "",
  "main": "pub/js/stage.js",
  "scripts": {
    "test": "npm run build:test && npm run build && mocha-phantomjs test/runner.html",
    "postinstall": "npm run build",
    "serve": "http-server pub -o",
    "build": "mkdir -p pub/js && npm run build:js && npm run build:less && npm run build:demo",
    "watch": "npm run livereload & watch 'npm run build' src",
    "watch:test": "watch 'npm run test' src test",
    "livereload": "livereload pub",
    "build:less": "lessc src/less/stage.less pub/css/stage.css",
    "build:js": "browserify src/js/index.js -o pub/js/stage.js -t [ babelify --presets [ @babel/preset-env ] ] --debug",
    "build:demo": "browserify src/js/demo.js -o pub/js/demo.js -t [ babelify --presets [ @babel/preset-env ] ] --debug && jade src/jade -o pub && lessc src/less/demo.less pub/css/demo.css",
    "build:test": "browserify test/test.*.js -o pub/js/test.js -t [ babelify --presets [ @babel/preset-env ] ] --debug"
  },
  "author": "lexoyo",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babelify": "^10.0.0",
    "browserify": "~13.0.0",
    "emitter-js": "^1.3.0",
    "http-server": "~0.9.0",
    "jade": "~1.11.0",
    "less": "^2.6.1",
    "livereload": "~0.4.1",
    "mocha": "~2.4.5",
    "mocha-phantomjs": "^4.0.2",
    "mouse": "0.0.1",
    "redux": "^4.0.1",
    "watch": "~0.17.1"
  },
  "devDependencies": {
    "babel-polyfill": "^6.8.0"
  }
}
